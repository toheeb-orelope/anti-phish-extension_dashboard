{
  "manifest_version": 3,
  "name": "Phishing Detector",
  "short_name": "PhishDetect",
  "description": "Real-time phishing detection using local models + threat intel APIs (popup, content script, background worker).",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Phishing Detector",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],

  "options_page": "options.html",

  "host_permissions": ["<all_urls>"],

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "cookies",
    "alarms",
    "notifications",
    "bookmarks",
    "identity",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],

  "optional_permissions": ["history", "management"],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "phish_block_rules_v1",
        "enabled": true,
        "path": "rules/ruleset_1.json"
      }
    ]
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open Phishing Detector popup"
    }
  },

  "author": "Your Name or Team",
  "homepage_url": "https://yourproject.example.com",
  "minimum_chrome_version": "88"
}
